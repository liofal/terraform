export TF_VAR_pm_api_url=https://<YOUR_API_URL>:8006/api2/json
export PM_API_TOKEN_ID=terraform@pve!terraform
export PM_API_TOKEN_SECRET=<YOUR_PM_API_TOKEN_SECRET>

export TF_VAR_searchdomain=<YOUR_SEARCH_DOMAIN>
export TF_VAR_nameserver=<YOUR_NAME_SERVER>
export TF_VAR_gw=<YOUR_GATEWAY>

# AWS credentials for S3 backend
export AWS_ACCESS_KEY_ID=<YOUR_AWS_ACCESS_KEY_ID>
export AWS_SECRET_ACCESS_KEY=<YOUR_AWS_SECRET_ACCESS_KEY>
export AWS_DEFAULT_REGION=eu-west-1

# Optional: lower controller sizing compared to workers
export TF_VAR_controller_cores=2
export TF_VAR_controller_memory_mb=2048

# Optional: worker sizing
export TF_VAR_worker_cores=4
export TF_VAR_worker_memory_mb=8192

# Optional: set to true to provision extra controllers k3sc2 and k3sc3
export TF_VAR_k3s_ha_enabled=false

# Optional: pin clone template IDs per role
export TF_VAR_controller1_clone_template=101
export TF_VAR_controller_ha_clone_template=template3
export TF_VAR_worker_clone_template=101

# Optional: pin controller VMIDs for stable pct_id mapping during controller rotation
export TF_VAR_controller1_vmid=103
export TF_VAR_controller2_vmid=108
export TF_VAR_controller3_vmid=107

# Optional: create a temporary canary worker for major template/OS upgrades
export TF_VAR_k3s_canary_worker_enabled=false
export TF_VAR_canary_worker_hostname=k3sw6
export TF_VAR_canary_worker_ip_cidr=192.168.1.210/24
export TF_VAR_canary_worker_hwaddr=7A:00:00:00:04:10
export TF_VAR_canary_worker_vmid=111
